#include "holberton.h"

/**
 * print_diagonal - prints a diagonal line @n lines long, followed by a newline
 *
 * @n: length of diagonal line in characters
 *
 * Return: void
 */
void print_diagonal(int n)
{
	int i, j;

	for (i = 0; i < n; i++)
	{
		for (j = i; j > 0; j--)
		{
			_putchar(' ');
		}
		_putchar('\\');
		_putchar('\n');
	}
	if (n < 1)
		putchar('\n');
}
