#include "holberton.h"

/**
 * print_sign - print the sign of a number
 *
 * @n: the number to be checked for sign
 *
 * Return: 0
 */
int print_sign(int n)
{
	if (n > 0)
	{
		putchar('+');
		return (1);
	}
	else if (n < 0)
	{
		putchar('-');
		return (-1);
	}
	else
	{
		putchar('0');
		return (0);
	}
}
